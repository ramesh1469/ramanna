pipeline {
    agent { lable: "terraform" }
    triggers { pollSCM('* * * * *') }
    stages {
      stage(vcs) {
        steps {
                git branch:"main",url:"https://github.com/ramesh1469/game-of-life.git"
        }
       stage(build) {
         steps {
            sh '''	
                cd /home/ubuntu/game-of-life
                mvn package
                ansible-playbook -i tomcat.yaml
                sudo cp gameoflife-web/target/gameoflife.war   /usr/local/tomcat/webapps/gameoflife.war
              '''
         }
       }  
    }
    }
    }

